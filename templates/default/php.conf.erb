# Load the module in Apache
LoadModule php5_module "<%= node['php']['windows']['path'] %>\php5apache2_4.dll"

# Set the content type
<IfModule mime_module>
    AddHandler application/x-httpd-php .php
</IfModule>
# Add index file extension
<IfModule dir_module>
    DirectoryIndex index.php index.html
</IfModule>

# Set the location where PHP's INI file is located
PHPIniDir "<%= node['php']['windows']['path'] %>"
